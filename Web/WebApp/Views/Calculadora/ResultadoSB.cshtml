@model string
@{
    ViewBag.Title = "Resultado";
}


<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">@ViewBag.Message</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>
<div class="row">
    <div class="col-md-12">
        <h4>Resultado</h4>
        <hr />
        @if (Model != null)
        {
            <h3><label class="form-control text-success">@Model.ToString()</label></h3>
        }
        else
        {
            <h3><label class="form-control text-danger">Lo sentimos, el calculo no será procesado. :C</label></h3>
        }
        <br />
        @Html.ActionLink("Volver", "Index", "Calculadora", null, new { @class = "btn btn-primary" })
    </div>
</div>