@model WebApp.ViewModels.UsuarioViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutBlank.cshtml";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">@ViewBag.Message</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-4">
        <h4>Inicio de sesión</h4>
        @using (Html.BeginForm("Login", "Common", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.TextBoxFor(m => m.Correo, new { @class = "form-control", @placeholder = "Tu correo electrónico", @required = "required" })
            @Html.ValidationMessageFor(m => m.Correo, "", new { @class = "text-danger" })

            @Html.TextBoxFor(m => m.Contrasenia, new { @class = "form-control", @placeholder = "Tu contraseña", @type = "password", @required = "required" })
            @Html.ValidationMessageFor(m => m.Contrasenia, "", new { @class = "text-danger" })
            <br />
            <input type="submit" class="btn btn-primary" value="Iniciar sesión" />
        }
    </div>
</div>
